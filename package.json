{
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "cypress": "^12.9.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "husky": "^8.0.0",
    "kill-port": "^2.0.1",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "shell-exec": "^1.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "pnpm exec ts-node ./cypress/support/e2e.ts && (cd src/frontend && pnpm run test)",
    "prepare": "husky install",
    "lintUi": "cd src/frontend && pnpm run lint",
    "formatUi": "cd src/frontend && pnpm run format",
    "lintPython": "cd src/chainlit/ && poetry run mypy chainlit/",
    "formatPython": "black `git ls-files | grep '.py$'` && isort --profile=black .",
    "buildUi": "(cd src/frontend && pnpm run build)",
    "build": "(cd src/frontend && pnpm run build) && (cp -r src/frontend/dist src/chainlit/chainlit/frontend/) && (cd src/chainlit && poetry build)"
  }
}
